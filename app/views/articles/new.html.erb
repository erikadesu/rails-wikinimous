<div class="container">
<h1>New article</h1>
<%= form_for @article do |f| %>
<div class="form-group">
<%= f.label :title %>
<div class="col-md-8">
<%= f.text_field :title, class: "form-control" %>
</div>
</div>
<div class="form-group">
<%= f.label :content %>
<div class="col-md-8">
<%= f.text_area :content, class: "form-control" %>
</div>
</div>
<%= f.submit :submit, class: 'btn btn-success' %>
<% end %>
</div>
<br>
<button type="button" class="btn btn-outline-primary"><%= link_to 'Back to articles', root_path %></button>

